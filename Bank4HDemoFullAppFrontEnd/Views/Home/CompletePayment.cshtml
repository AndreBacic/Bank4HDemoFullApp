@using Bank4HDemoLibrary
@model PaymentModel
@{
    ViewData["Title"] = "View Payment";
}

<h1>Payment: @Model.Name</h1>
<h3>Amount Due: $@Model.Amount</h3>
<p>Date Due: @Convert.ToDateTime(Model.DateDue).Date.ToString("d")</p>
<a asp-action="MakePayment" asp-route-id="@Model.Id">Make Final Payment</a>

